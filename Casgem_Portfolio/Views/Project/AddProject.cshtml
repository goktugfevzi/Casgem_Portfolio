
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Yeni Proje Ekleme Sayfası</h2>

<form method="post">
    <label>Proje Adı</label>
    <input type="text" class="form-control" name="ProjectName" />
    <br />
    <label>Proje Açıklaması</label>
    <input type="text" class="form-control" name="ProjectDescription" />
    <br />
    <label>Proje URLsi</label>
    <input type="text" class="form-control" name="ProjectURL" />
    <br />
 
    <button class="btn btn-info">Projeyi Kaydet</button>
</form>
