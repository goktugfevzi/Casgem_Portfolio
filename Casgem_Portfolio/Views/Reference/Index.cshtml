@model List<Casgem_Portfolio.Models.Entities.TblReference>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Referanslarım</h2>

<table class="table table-bordered">
    <tr>
        <th>Foto</th>
        <th>İsim</th>
        <th>Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src=@item.ReferenceImageURL height="70" width="90" ></td>
            <td>@item.ReferenceName</td>
            <td>@item.ReferenceJob</td>
            <td><a href="/Reference/DeleteReference/@item.ReferenceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Reference/UpdateReference/@item.ReferenceID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Reference/AddReference" class="btn btn-outline-primary">Yeni Referans Ekle</a>